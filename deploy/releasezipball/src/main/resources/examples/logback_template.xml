/*
 *
 * This is a template for the logback configuration file.
 * The following tags should be replaced (automatically replaced by deploy):
 * APPID
 *
-->
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{64} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
        <file>./log/APPID.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>./log/APPID.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 10MB -->
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{64} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="MONITOR" class="dk.netarkivet.monitor.logging.CachingSLF4JAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{64} - %msg%n</pattern>
    </appender>

    <logger name="org" level="WARN" />
    <logger name="org.archive" level="WARN" />
    <logger name="org.archive.io.arc" level="ERROR" />
    <logger name="org.archive.crawler.filer" level="ERROR" />
    <logger name="org.archive.crawler.framework.Filter" level="ERROR" />
    <logger name="org.archive.crawler.framework.ToeThread" level="ERROR" />
    <logger name="org.archive.crawler.prefetch.QuotaEnforcer" level="WARN" />

    <logger name="sun.jmx" level="WARN" />
    <!-- Reduce noise from the JMSbroker client (NAS-2039) -->
    <logger name="com.sun.messaging.jmq.jmsclient.AckQueue" level="ERROR" />

    <logger name="com.mchange.v2.c3p0" level="INFO" />
    <logger name="com.mchange.v2.resourcepool" level="INFO" />

    <logger name="org.apache.jsp" level="INFO" />
    <logger name="org.mortbay.jetty.servlet.ServletHandler" level="WARN" />

    <logger name="httpclient.wire.header" level="INFO" />
    <logger name="org.mortbay.log" level="INFO" />

    <logger name="org.apache.http.wire" level="INFO" />
    <logger name="org.apache.http.headers" level="INFO" />
    <logger name="org.apache.http" level="INFO" />
    <logger name="org.apache.activemq" level="INFO" />

    <logger name="org.bitrepository.protocol" level="INFO" />

    <logger name="dk.netarkivet" level="INFO" />
    <logger name="dk.netarkivet.common.distribute.JMSConnection" level="INFO" />
    <logger name="dk.netarkivet.common.utils.batch.UrlSearch" level="INFO" />
    <logger name="dk.netarkivet.common.utils.cdx.ExtractCDXJob" level="INFO" />
    <logger name="dk.netarkivet.common.distribute.HTTPRemoteFileRegistry" level="INFO" />

    <logger name="Harvest Definition" level="ERROR" />
    <logger name="Bit\ Preservation" level="ERROR" />
    <logger name="History" level="ERROR" />
    <logger name="QA" level="ERROR" />
    <logger name="Status" level="ERROR" />

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
        <appender-ref ref="MONITOR" />
    </root>
</configuration>
