<!-- 
	This file contains the default settings used by the BitmagArcrepositoryClient
	class.

	For documentation of the individual settings, please refer to the javadoc for
	dk.netarkivet.archive.arcrepository.distribute.BitmagArcRepositoryClient.java
-->
<settings>
    <common>
        <arcrepositoryClient>
            <bitrepository>
        <!-- if not set, use of certificates is disabled. If the keyfilename does not exist
        	use of certificates is disabled as well.
         -->
                <keyfilename></keyfilename>
                <settingsDir></settingsDir>
                <storeMaxPillarFailures>0</storeMaxPillarFailures>
                <store_retries>3</store_retries>
                <tempdir>arcrepositoryTemp</tempdir>
		<collectionID>netarkivet</collectionID>
		<usepillar></usepillar>
		<!-- Set to 5 minutes to make it possible to retrieve large records
                 using FTP -->
                <getTimeout>300000</getTimeout>
              <waitRetrySeconds>1800</waitRetrySeconds>
            </bitrepository>
        </arcrepositoryClient>
    </common>
</settings>
