<!-- 
	This file contains the default settings used by the BitmagArcrepositoryClient
	class.

	For documentation of the individual settings, please refer to the javadoc for
	dk.netarkivet.common.distribute.arcrepository.bitrepository.BitmagArcRepositoryClient.java 
-->
<settings>
    <common>
        <arcrepositoryClient>
            <bitrepository>
                <!-- if not set, use of certificates is disabled. If the keyfilename does not exist
                        use of certificates is disabled as well.
                 -->
                <keyfilename></keyfilename>
                <settingsDir>./common/common-core/src/main/resources/dk/netarkivet/common/distribute/arcrepository</settingsDir>
                <storeMaxPillarFailures>1</storeMaxPillarFailures>
                <tempdir>arcrepositoryTemp</tempdir>
                <collectionID>dvds</collectionID>
                <usepillar>file2-pillar</usepillar>
            </bitrepository>
        </arcrepositoryClient>
    </common>
</settings>
