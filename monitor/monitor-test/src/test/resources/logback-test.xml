<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{64} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.lordofthejars.foo" level="INFO" additivity="false">
      <appender-ref ref="STDOUT" />
    </logger>

    <logger name="dk.netarkivet.common.utils.arc.ARCBatchJobTester" level="INFO" />
    <logger name="dk.netarkivet.common.utils.warc.WARCBatchJobTester" level="INFO" />
    <logger name="dk.netarkivet.common.utils.batch.UrlSearch" level="INFO" />
    <logger name="dk.netarkivet.common.utils.cdx.ExtractCDXJobTester" level="INFO" />
    <logger name="dk.netarkivet.common.utils.cdx.ExtractCDXJob" level="INFO" />
    <logger name="dk.netarkivet.common.distribute.HTTPRemoteFileRegistry" level="INFO" />
    <logger name="dk.netarkivet.common.distribute.JMSConnection" level="INFO" />

    <!-- Required by dk.netarkivet.common.tools.ExtractCDXTester. -->
    <logger name="dk.netarkivet.common.utils.batch.BatchLocalFiles" level="WARN" />

    <logger name="httpclient.wire.header" level="INFO" />
    <logger name="org.mortbay.log" level="INFO" />

    <logger name="org.apache.http.wire" level="INFO" />
    <logger name="org.apache.http.headers" level="INFO" />
    <logger name="org.apache.http" level="INFO" />
    <logger name="org.apache.activemq" level="INFO" />
    <logger name="org.bitrepository.protocol" level="INFO" />

    <!-- Strictly speaking, the level attribute is not necessary since -->
    <!-- the level of the root level is set to DEBUG by default.       -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
